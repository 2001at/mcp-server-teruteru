{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src", // ← ソースコードは src 配下
    "outDir": "./dist", // ← ビルド成果物は dist 配下

    // Environment Settings
    "module": "NodeNext", // nodenext or ESNext どちらでもOK（Node.js ESM対応）
    "target": "ES2020", // か ESNext でもOK
    "types": ["node"], // node の型定義を使う

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
